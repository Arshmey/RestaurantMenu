@model IEnumerable<Dish>

@{
    ViewData["Title"] = "Меню";
}

<div class="text-center">
    @await Component.InvokeAsync("Table", Model)
    <div id="modAddDialog" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div id="dialogContent" class="modal-content"/>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        $(function() {
          $.ajaxSetup({ cache: false});
          $(".addItem").click(function(e) {
            e.preventDefault();
            $.get(this.href, function(data) {
              $('#dialogContent').html(data);
              $('#modAddDialog').modal('show');
            });
          });
        })
    </script>
}
