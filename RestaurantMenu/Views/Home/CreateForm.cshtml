@model Dish

<div class="text-center">
  @using(Html.BeginForm("CreateDish", "Home", FormMethod.Post))
  {
    @Html.ValidationSummary(true)
      <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Name)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => m.Composition)
        @Html.TextBoxFor(m => m.Composition, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Composition)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Description)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => m.Price)
        <input class="form-control" type="number" id="Price" name="Price"/>
        @Html.ValidationMessageFor(m => m.Price)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => m.Grams)
        @Html.TextBoxFor(m => m.Grams, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Grams)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => m.Calorie)
        @Html.TextBoxFor(m => m.Calorie, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Calorie)
      </div>
      <div class="form-group">
        @Html.LabelFor(m => m.CookTime)
        @Html.TextBoxFor(m => m.CookTime, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.CookTime)
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Добавить</button>
      </div>
  }
</div>

@section Scripts
{
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
