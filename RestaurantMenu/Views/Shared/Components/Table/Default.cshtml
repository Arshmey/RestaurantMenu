@using System.Globalization
@model IEnumerable<Dish>

<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateCreate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grams)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Calorie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CookTime)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (Dish item in Model) {
        <tr>
            <td>
                @{ string dateCreate = item.DateCreate.ToString("g");}
                @Html.DisplayFor(model => dateCreate)
            </td>
            <td>
                @Html.DisplayFor(model => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Composition)
            </td>
            <td>
                @Html.DisplayFor(model => item.Description)
            </td>
            <td>
                @{ string price = item.Price + " " + CultureInfo.CurrentCulture.NumberFormat.CurrencySymbol;}
                @Html.DisplayFor(model => price)
            </td>
            <td>
                @{ string grams = item.Grams + " г.";}
                @Html.DisplayFor(model => grams)
            </td>
            <td>
                @{ string calorie = Table.CountCalorie(item);}
                @Html.DisplayFor(model => calorie)
            </td>
            <td>
                @{ string cookTime = Table.CountTime(item);}
                @Html.DisplayFor(model => cookTime)
            </td>
        </tr>
    }
    </tbody>
</table>